<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark" />

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar2"
        >


        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailsPage"
            android:padding="15dp">


            <RelativeLayout
                android:id="@+id/spinner_objectID"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="680dp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progressBarID"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:theme="@style/PurpleSpinnerColor"
                    android:visibility="visible"

                    />

                <TextView
                    android:id="@+id/details_fetching_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="160dp"
                    android:text="Fetching Data..."
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:id="@+id/tickerID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="MSFT" />

                <TextView
                    android:id="@+id/currPriceID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="$210.08" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:id="@+id/compNameID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/darkgrey"
                    android:text="Microsoft CorporationMicrosoft Corporation Microsoft Corporation" />

                <TextView
                    android:id="@+id/changePriceID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textSize="17sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:text="-$6.15" />
            </LinearLayout>

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_x="93dp"
                    android:layout_y="88dp"
                    android:fillViewport="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </androidx.core.widget.NestedScrollView>
            </WebView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Portfolio"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="7dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sharesOwnedID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Shares Owned: 12.0"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/marketValueID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Market Value: $2520.96"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/tradeBtnID"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_round_corner"
                    android:text="TRADE"
                    android:onClick="trade_funct"
                    android:textColor="@android:color/white"  />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Stats"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="7dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:id="@+id/currPrice2ID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Current Price: 210.08"
                    />
                <TextView
                    android:id="@+id/lowID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Low: 210.08"
                    />
                <TextView
                    android:id="@+id/bidPriceID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Bid Price: 210.08"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:id="@+id/openPriceID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Open Price: 210.08"
                    />
                <TextView
                    android:id="@+id/midPriceID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Mid: 210.08"
                    />
                <TextView
                    android:id="@+id/highPriceID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="High: 210.08"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:id="@+id/volumeID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Volume: 36465210.08"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left" android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left" android:layout_weight="1"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="About"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="7dp"

                />

            <TextView
                android:id="@+id/aboutID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:background="#ffffff"
                android:text="xcvbyeunicokfplvdlskjhgdszdxcfvgbhjkl;/,knjhgrzsdxcfgvhbjn;.,/lmknjhtgrfzxdcfvbnjmok,v fdsfyguhijcodmlhbguhdsakplmcknjfbuhgijofkp;s,almjnughijokfpel;,slmvdbjghueijofkewpdl'a;s,lmfknijokplwe;,almknlijgorpewl['s;d,lmfkngijaokdpslxAZsxdcfghvbnmlkiujyhtgfxzdsxcfgvbiokpl';,lmknjbhvgcfxdzesrdtfyguhijoklmkngfdxcyguhijokp;'l;loikuytrsezd bjnklmk;iuytdfdzsâ‰ˆihufhtgfzdsdxfcgvbhjk;ljgfzdxcfgvhbjk"
                android:textColor="#000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="right">

                <TextView
                    android:id="@+id/showMore"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/aboutID"
                    android:text="Show More..."
                    android:clickable="true" />


                <TextView
                    android:id="@+id/showLess"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/aboutID"
                    android:text="Show Less"
                    android:clickable="true"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/newsTitle"
                android:text="News"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"
                />

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5dp"
                android:id="@+id/news1Card"
                android:visibility="invisible"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center" android:background="@drawable/newscard_corner2"
                    >

                    <androidx.cardview.widget.CardView android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/news_card_image1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"  />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:padding="10sp"

                        >

                        <!-- News author + Time -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/news_card_source1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:text="Engageted.com"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/news_card_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="4 days ago" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/news_card_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A Colorado Wildfire just climbed Over the Rockies in October."
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="3"
                            />



                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newsList"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>


            <TextView
                android:id="@+id/footerID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Powered by tiingo"
                android:textStyle="italic"
                android:gravity="center"
                android:background="@color/colorPrimary"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
